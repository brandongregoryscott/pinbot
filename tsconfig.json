{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "lib": ["esnext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false, // TODO: Swap this after port
        "noUnusedParameters": false, // TODO: Swap this after port
        "outDir": "./dist",
        "rootDir": "src",
        "removeComments": false,
        "resolveJsonModule": false,
        "skipLibCheck": true,
        "strict": true,
        "target": "es5"
    },
    "include": ["src"]
}
